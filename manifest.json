{
  "manifest_version": 3,
  "name": "YouTube Analytics Tracker",
  "version": "0.1.0",
  "description": "Track basic YouTube channel statistics.",
  "action": {
    "default_popup": "index.html",
    "default_title": "YouTube Tracker"
  },
  "browser_action": {
  "default_popup": "index.html"
},
  "permissions": ["storage"],
  "host_permissions": ["https://www.googleapis.com/*"],
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  }
}
